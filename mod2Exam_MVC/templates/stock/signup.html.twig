{% extends 'base.html.twig' %}
{% block title %}SignUp page{% endblock %}
{% block body %}
<body class="register-body">
  <div class="register">
    <form method="post"  name="signUp-form">
      <div>
        <label>Username</label>
        <input id="regName" type="text" name="userName" >
      </div>
      <div>
        <label>Email</label>
        <input id="regEmail" type="email" name="email" >
      </div>
      <div>
        <label>Contact Number</label>
        <input id="regPhone" type="text" name="number" >
      </div>
      <div>
        <label>Password</label>
        <input id="regPassword" type="password" name="password" >
      </div>
      <div>
        <input type="submit" value="Submit" class="buttons" name="signUpBtn" id="signUpBtn" onclick="signUp()">
      </div>
      <span id="err"></span>
      <div>
        {% if err is defined %}
          <p id="err">{{ err }}</p>
        {% endif %}
      </div>
    </form>  
    <div class='newDiv'></div>
  </div> 
</body>
{% endblock %}
